@font-face
	font-family: AlteDin
	src: url("../assets/fonts/din1451alt.ttf")
	
@font-face
	font-family: MinecraftSeven;
	src: url("../assets/fonts/MinecraftSeven.ttf")

:root
	color-scheme: dark

body
	--main-background-color: #23302d
	--sidebar-background-color: #253634
	--border-width: 2px
	--border-light-color: #29403F
	--border-shade-color: #18201E
	--background-color: #1E2926
	
	--banner: #AD3535
	--banner-selected: #7D2C3F
	--banner-hover: #D55B3A
	--banner-active: #C44133

	margin: 0
	background-color: var(--sidebar-background-color)
	min-height: 100vh
	font-family: AlteDin
	position: relative
	padding-bottom: 40px
	box-sizing: border-box
	
	&::-webkit-scrollbar
		width: 10px

	&::-webkit-scrollbar-thumb
		background-color: var(--banner-active)

		&:hover
			background-color: var(--banner-hover)

			&:active
				background-color: var(--banner-active)

input
	font-family: AlteDin

.hidden
	display: none !important

.bannerImg
	width: 100%

.banner
	position: sticky
	top: 0
	width: 100%
	height: 60px
	background-color: var(--banner)
	display: flex
	align-items: center
	z-index: 999
	box-shadow: 0 10px 10px #00000050
	margin-top: -4px

.bannerButton
	height: 60px
	padding: 0 16px
	display: flex
	align-items: center
	font-size: 25px
	text-shadow: 1.5px 2px #00000090
	color: #FFF
	white-space: pre
	transition: box-shadow 200ms ease-in-out, color 200ms ease-in-out

	&:hover
		box-shadow: 0 0 40px 40px var(--banner-hover) inset
	
	&:active
		box-shadow: 0 0 40px 40px var(--banner-active) inset

	&.selected
		box-shadow: 0 0 40px 40px var(--banner-selected) inset
		cursor: default

.bannerLogo
	display: flex
	align-items: center
	
	svg
		filter: drop-shadow(1.5px 2px #00000090)
		width: 48px
		height: 48px
		fill: black

	#e
		fill: #33E38E
		
	#h
		fill: white

	@media screen and (min-width: 590px)
		&::after
			content: "Home"
			margin-left: 8px

.bannerDrop
	@extend .bannerButton
	position: relative
	outline: none
	padding: 0 30px
	display: flex
	justify-content: center
	
	&:after
		font-size: 0.8em
		content: ""
		border-left: 10px solid white
		border-top: 5px solid transparent
		border-bottom: 5px solid transparent
		filter: drop-shadow(1.5px 2px 0 #00000090)
		transform: rotate(0deg)
		transition: transform 250ms, filter 250ms

	.menu
		display: none
		position: absolute
		top: 100%
		left: 50%
		transform: translateX(-50%)
		background-color: #00000070
		box-shadow: 0 10px 10px #00000050
		flex-direction: column
		
		&:hover, ^[0]:hover ^[1..-1], &.touch-open
			display: flex
			
		&>*
			display: flex
			align-items: center
			justify-content: center
			padding: 10px 20px
			position: relative
			
			&:hover
				background-color: #D55B3A

			&:not(:first-child)
				margin-top: 1px

				&::after
					content: ""
					position: absolute
					left: 10px
					right: 10px
					top: -1px
					height: 1px
					background-color: #FFF6

	&:hover
		background-color: var(--banner-hover)

		&:after
			transform: rotate(90deg)
			filter: drop-shadow(2px -1.5px 0 #00000090)

.footer
	width: 100%
	height: 40px
	background-color: var(--banner)
	display: flex
	align-items: center
	box-sizing: border-box
	position: absolute
	bottom: 0
	box-shadow: 0 -10px 10px #00000050
	
.footer-link
	padding: 0 20px

.filler
	flex: 1

#resourcepacksButton
	@media screen and (min-width: 700px)
		&::before
			content: "Resource "

.page
	display: flex

.subpage
	display: flex
	flex: 1

.main
	background-color: var(--main-background-color)
	flex: 1
	text-align: center
	min-height: calc(100vh - 160px - 12.77vw)
	padding: 0 20px 60px

.sidebar
	background-color: var(--sidebar-background-color)
	min-height: 100%
	width: 130px

#home .main
	display: flex
	flex-direction: column
	align-items: center

#resourcepacks .main,
#maps .main,
#dungeons .main
	padding: 0 0 60px

.home
	width: 44%
	float: left
	padding: 3%

.homeImage
	height: 180px
	box-shadow: 0 10px 10px #00000050

.packContent
	display: flex
	flex-direction: column
	align-items: center
	padding: 0 10px

.container
	for x in 1...12
		@media screen and (min-width: x*240px+300px)
			max-width: x*240px

.pack
	width: 220px
	padding: 0 10px
	float: left
	display: flex
	flex-direction: column

.pack-banner
	width: 220px
	padding-top: 12px
	box-shadow: 0 10px 10px #00000050

.button-download
	box-sizing: border-box
	appearance: none
	background-color: #6469C8
	border: var(--border-width) solid #6E59BA
	border-top-color: #7289DA
	border-left-color: #7289DA
	color: white
	cursor: pointer
	display: flex
	font-size: 1rem
	font-weight: 400
	line-height: 1
	margin: 20px
	padding: 1.2em 2.8em
	text-transform: uppercase
	font-family: AlteDin
	font-weight: 700
	transition: box-shadow 200ms ease-in-out, color 200ms ease-in-out
	min-width: 240px
	justify-content: center
	position: relative
	user-select: none
	filter: drop-shadow(0 8px 5px #00000050)

	.icon
		fill: white
		position: absolute
		left: 8px
		top: 50%
		transform: translateY(-45%)

		svg
			width: 40px
			height: 40px
		
		&+span
			margin-left: 8px

	&:hover
		border: var(--border-width) solid #7289DA
		border-top-color: #88BFF3
		border-left-color: #88BFF3
		color: #fff
		outline: 0
		box-shadow: 0 0 40px 40px #7AA2E3 inset

#other > .main
	display: flex
	flex-direction: column
	align-items: center
	
.button-mirror
	@extend .button-download
	background-color: #5449C8
	border: var(--border-width) solid #5E39BA
	border-top-color: #6269DA
	border-left-color: #6269DA

	&:hover
		border: var(--border-width) solid #6269DA
		border-top-color: #789FF3
		border-left-color: #789FF3
		box-shadow: 0 0 40px 40px #6A82E3 inset

.tab-group
	display: inline-flex
	flex-direction: column
	padding: 10px 1vw

.tabs
	display: flex

.tab-group-type
	flex: 1
	text-align: left
	cursor: default
	user-select: none
	font-family: AlteDin
	color: white
	font-size: 24px
	margin-top: 2px
	padding-left: 4px
	color: #e29f00
	text-shadow: 0 2px #381218

.button-tab
	font-family: AlteDin
	color: white
	font-size: 20px
	padding: 4px 8px calc(4px + var(--border-width))
	margin-bottom: calc(0px - var(--border-width))
	border-top-left-radius: 5px
	border-top-right-radius: 5px
	border: var(--border-width) solid transparent
	border-left-color: transparent
	border-right-color: transparent
	border-bottom: none
	cursor: pointer
	user-select: none
	
	&.selected
		background-color: var(--background-color)
		background-image: none
		border: var(--border-width) solid var(--border-light-color)
		border-top-color: var(--border-shade-color)
		border-left-color: var(--border-shade-color)
		border-bottom: none
		z-index: 2
		cursor: default
		
.tab-pages
	padding: 10px 0px
	background-color: var(--background-color)
	border: var(--border-width) solid var(--border-light-color)
	border-top-color: var(--border-shade-color)
	border-left-color: var(--border-shade-color)
	z-index: 1

.showcase-img
	width: 450px
	margin: 15px
	box-shadow: 0 10px 10px #00000050

.description
	white-space: pre-wrap

.pack-icon
	padding: 10% 10%
	width: 80%

.search
	background-color: #00000040
	display: inline-flex
	align-items: center
	
.search-icon
	width: 24px
	height: 24px
	position: relative
	margin-right: 7px
	margin-left: 8px
	cursor: pointer
	
	svg
		width: 24px
		height: 24px
		fill: white
	
	&::after
		content: ""
		position: absolute
		top: 3px
		bottom: 3px
		right: -7px
		width: 1px
		background-color: #FFFF

.search-input
	background-color: transparent
	border: none
	outline: none
	padding: 10px 10px

.featureContent
	display: flex
	align-items: flex-start
	padding: 0 10px
	gap: 20px
	justify-content: center
	cursor: pointer

	img
		align-self: center

	@media screen and (max-width: 1080px)
		flex-direction: column
		align-items: center

.featureContentText
	text-align: left
	max-width: 660px
	white-space: pre-wrap
	
	& > h2
		margin-top: 0
		margin-bottom: 0
	
	@media screen and (max-width: 1080px)
		text-align: center

h1
	font-family: MinecraftSeven
	color: #e29f00
	text-shadow: 0 3px #381218
	font-size: 28px
	text-align: center
	
h2
	font-family: AlteDin
	color: white
	font-size: 20px
	
p1, a
	font-family: AlteDin
	color: white
	font-size: 20px
	line-height: 30px
	text-decoration: none

p2
	font-family: AlteDin
	color: white
	font-size: 14px
	line-height: 20px
	
p3
	font-family: AlteDin
	color: white
	font-size: 11px
	line-height: 20px
	letter-spacing: 2px